{
	"cli": {
		"version": ">= 16.13.3",
		"appVersionSource": "remote"
	},
	"build": {
		"dev": {
			"developmentClient": true,
			"distribution": "internal",
			"channel": "dev",
			"android": { "gradleCommand": ":app:assembleDebug" },
			"ios": { "simulator": true }
		},
		"staging": {
			"autoIncrement": true,
			"distribution": "internal",
			"channel": "staging"
		},
		"production": {
			"autoIncrement": true,
			"channel": "prod"
		}
	},
	"submit": {
		"production": {
			"android": { "track": "internal" },
			"ios": { "releaseType": "MANUAL" }
		}
	},
	"deploy": {
		"staging": { "channel": "staging" },
		"production": { "channel": "prod" }
	}
}
