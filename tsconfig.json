{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["src/*"]
		},
		"typeRoots": ["./types", "./node_modules/@types"]
	},
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/nativewind-env.d.ts",
    "nativewind-env.d.ts"
  ]
}